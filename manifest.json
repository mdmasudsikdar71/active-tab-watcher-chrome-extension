{
	"name": "ActiveTab Watcher",
	"version": "1.0.0",
	"description": "Track and monitor the active time spent on Chromium browser tabs",
	"permissions": ["tabs","storage"],
	"background": {
		"scripts": ["watcher.js"],
		"persistent": false
	},
	"browser_action": {
		"default_popup": "popup.html",
		"default_icon": "icon.png"
	},
	"manifest_version": 2
}
